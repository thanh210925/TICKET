@model TICKET.Models.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to right, #43cea2, #185a9d);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .login-card {
        backdrop-filter: blur(15px);
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 40px 30px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        transition: all 0.3s;
        width: 100%;
        max-width: 500px;
    }

        .login-card:hover {
            transform: translateY(-4px);
        }

    .form-label {
        font-weight: 500;
        color: #fff;
        margin-bottom: 5px;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.6);
        border: none;
        border-radius: 10px;
        padding: 10px 15px;
        transition: all 0.3s;
        width: 100%;
    }

        .form-control:focus {
            background-color: #fff;
            box-shadow: 0 0 0 3px rgba(0, 255, 200, 0.25);
        }

    .btn-login {
        background: linear-gradient(to right, #11998e, #38ef7d);
        border: none;
        font-weight: bold;
        color: white;
        border-radius: 10px;
        transition: background 0.3s ease;
        padding: 10px;
        width: 100%;
    }

        .btn-login:hover {
            background: linear-gradient(to right, #38ef7d, #11998e);
        }

    .input-group-text {
        background-color: transparent;
        border: none;
        color: #333;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 4px;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 95vh;">
    <div class="login-card">
        <div class="text-center mb-4">
            <h2 class="text-white fw-bold"><i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập</h2>
        </div>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">@Html.DisplayNameFor(m => m.Email)</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email..." })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-4">
                <label class="form-label">@Html.DisplayNameFor(m => m.Password)</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu..." })
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="mb-4">
                <button type="submit" class="btn btn-login">
                    <i class="bi bi-door-open-fill me-2"></i>Đăng nhập
                </button>
            </div>

            <div class="text-center text-white">
                Chưa có tài khoản? <a href="@Url.Action("Register", "Account")" class="text-decoration-underline text-light">Đăng ký ngay</a>
            </div>
        }
    </div>
</div>
